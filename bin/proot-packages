#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

# usage #

# variables #

script=$(basename -- "${BASH_SOURCE[0]}")

# enable quiet package install

export DEBIAN_FRONTEND=noninteractive

# update packages list

console.inf "Updating repository and package information."
echo

console.silence "echo yes | apt-get update" &

console.spin "Updating..."
echo

# upgrade installed packages

console.inf "Upgrading installed packages."
echo

console.silence "echo yes | apt-get upgrade" &

console.spin "Upgrading..."
echo

# packages #

applications_list=(
	leocad
	povray
	youtube-dl
)

utilities_list=(
	curl
	ffmpeg
	git
	hub
	jq
	menu
	nano
	sudo
	wmctrl
	xdotool
)

display_server_list=(
	dbus-x11
	x11-utils
)

security_list=(
	ca-certificates
	openssl	
)

vnc_list=(
	tigervnc-common
	tigervnc-standalone-server
)

xorg_list=(
	xorg
	xserver-xorg-core
	xorgxrdp
	xrdp
)

web_list=(
	midori
)

themes_list=(
	arc-theme
	qt5-style-platform-gtk2
	qt5-style-plugin-gtk2
)

frameworks_list=(
	libqt5concurrent5
	libqt5opengl5
	libqt5printsupport5
	libqt5xml5
)

# desktop environments

blackbox_list=(
	blackbox
	bbmail
	bbpager
	bbrun
	bbtime
)

xfce4_list=(
	xfce4
	xfce4-goodies
	xfce4-appfinder
	xfce4-appmenu-plugin
	xfce4-battery-plugin
	xfce4-clipman
	xfce4-clipman-plugin
	xfce4-cpufreq-plugin
	xfce4-cpugraph-plugin
	xfce4-datetime-plugin
	xfce4-dev-tools
	xfce4-dict
	xfce4-diskperf-plugin
	xfce4-equake-plugin
	xfce4-eyes-plugin
	xfce4-fsguard-plugin
	xfce4-genmon-plugin
	xfce4-goodies
	xfce4-indicator-plugin
	xfce4-mailwatch-plugin
	xfce4-mount-plugin
	xfce4-mpc-plugin
	xfce4-netload-plugin
	xfce4-notes
	xfce4-notes-plugin
	xfce4-notifyd
	xfce4-panel
	xfce4-panel-profiles
	xfce4-places-plugin
	xfce4-power-manager
	xfce4-power-manager-data
	xfce4-power-manager-plugins
	xfce4-pulseaudio-plugin
	xfce4-screensaver
	xfce4-screenshooter
	xfce4-sensors-plugin
	xfce4-session
	xfce4-settings
	xfce4-smartbookmark-plugin
	xfce4-sntray-plugin
	xfce4-sntray-plugin-common
	xfce4-statusnotifier-plugin
	xfce4-systemload-plugin
	xfce4-taskmanager
	xfce4-terminal
	xfce4-time-out-plugin
	xfce4-timer-plugin
	xfce4-verve-plugin
	xfce4-volumed
	xfce4-wavelan-plugin
	xfce4-weather-plugin
	xfce4-whiskermenu-plugin
	xfce4-xkb-plugin
	elementary-xfce-icon-theme
	tango-icon-theme
	blackbird-gtk-theme
	bluebird-gtk-theme
	greybird-gtk-theme
	breeze-cursor-theme
)

# install list #

# core packages lists to load and install

install_list=(
	${utilities_list[@]}
	${display_server_list[@]}
	${security_list[@]}
	${vnc_list[@]}
)

# options #

# full

if [[ $install_option = "full" ]]
then
	desktop_environment_list=(
		${xfce4_list[@]}
	)
	
	install_list+=(
		${web_list[@]}
		${desktop_environment_list[@]}
		${themes_list[@]}
		${frameworks_list[@]}
	)
fi

# minimal

if [[ $install_option = "minimal" ]]
then
	desktop_environment_list=(
		${blackbox_list[@]}
	)
	
	install_list+=(
		${desktop_environment_list[@]}
		${frameworks_list[@]}
	)
fi

# output #

# vnc

if [[ $display_output = "vnc" ]]
then
	install_list+=(
		${vnc_list}
	)
fi

# xorg

if [[ $display_output = "xorg" ]]
then
	install_list+=(
		${xorg_list}
	)
fi

# applications #

if [[ $add_applications = "yes" ]]
then
	install_list+=(
		${applications_list}
	)
fi

# install #

console.inf "Installing required packages."
echo

for package in ${install_list[@]}
do
	if [ -z $(command -v ${package}) ]
	then
		console.wrn "Required package '${package}' not present."
		echo

		# use 'apt-get install --no-install-recommends' to keep bloat to a minimum
		
		console.silence "echo yes | apt-get install --no-install-recommends ${package}" &
		
		console.spin "Installing [ ${package} ]..."
		echo
	else
		console.scs "Required package '${package}' already installed."
		echo
		
		console.fwd "Continuing..."
		echo

		:
	fi
done

# cleanup

console.silence "apt-get clean" &

console.spin "Cleaning..."
echo