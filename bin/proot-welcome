#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

# usage #

# variables #

script=$(basename -- "${BASH_SOURCE[0]}")

# write welcome message - replaces motd

console.inf "Silencing login messages."
echo

cat <<- 'FILE' > "$HOME"/.bashrc
# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

console.fwd "Welcome to Ubuntu Dextop!"
echo

console.inf "Run 'vnc-start' to start your session."
console.inf "If you've already logged in, your selection has been saved"
console.inf "for automatic startup on shell login."
echo

FILE