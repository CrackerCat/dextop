#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

# usage #

# variables #

script=$(basename -- "${BASH_SOURCE[0]}")

# write welcome message - replaces motd

console.info "Silencing login messages."
echo

cat <<- 'FILE' > "$HOME"/.bashrc
# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

Welcome to Termux Dextop!

console.info "Run 'proot-launch <username>' to start your session."
console.info "Run 'proot-launch <username> <application>' to start a specific application on session load."

FILE