#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

# usage #

# variables #

script=$(basename -- "${BASH_SOURCE[0]}")

# values #

values_list=(
  vnc_password
)

for value in "${values_list[@]}"
do
	prompt="$(echo ${value^} | sed 's/_/ /')...: "
	
	console.in "${prompt}"
	
	[[ "$value" = *password* ]] && read -s input || read input
	
	# prevent empty input
	
	console.empty Password "is required for a successful setup."
	
	eval "$value"="$input"
done

echo

# hash password  using 'vncpasswd' utility and store it

echo "$password" | vncpasswd -f > "$HOME"/.vnc/passwd

console.success "VNC password changed."
echo
