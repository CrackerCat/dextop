#!/bin/bash

# dependencies #

source /data/data/com.termux/files/usr/bin/console
source /data/data/com.termux/files/usr/bin/globals

# binaries # 

binaries_list=(
	check-architecture
	create-user
	proot-environment
	proot-image
	proot-launch
	proot-packages
	proot-setup
	remove-files
	superuser-setup
	termux-environment
	termux-groups
	termux-packages
	termux-storage
	user-information
	user-preferences
	vnc-pass
	vnc-setup
	vnc-start
	vnc-stop
	xfconf-read
	xfconf-write
	xorg-setup
)

# download #

for binary in ${binaries_list[@]}
do
	binary_url=bin-dex.ntttn.me/"${binary}"

	curl -sL ${binary_url} > "$BINARIES_DIRECTORY/${binary}"

	console.download "Downloading binary [ ${binary} ]."
	echo

	chmod +x "$BINARIES_DIRECTORY/${binary}"
done